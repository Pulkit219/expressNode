<div class="container ">
  <h1 class="text-center"><b>Create a new campground</b></h1>
  <form action="/campgrounds" method="POST">
      <div class="form-group">
          <label for="name">Name</label>
            <input type="text" name="name" placeholder="type a name..." class="form-control form-control-sm">
      </div>
      <div class="form-group">
          <label for="price">Price</label>
            <input type="number" name="price" placeholder="price" min="0.01" step="0.01" class="form-control form-control-sm">
      </div>
      <div class="form-group">
          <label for="email">Image Url</label>
          <input type="text" name="url" placeholder="paste an IMAGE URL..." class="form-control form-control-lg">
      </div>
      <div class="form-group">
          <label for="desc">Description</label>
          <input type="text" name="desc" placeholder="Give a description..." class="form-control form-control-lg">
      </div>

      <button class="btn btn-primary btn-block" type="submit">Submit</button>
  </form>
  <br><br>
  <button type="button" name="button" class="btn btn-warning "><a href="/campgrounds">Go Back</a></button>
</div>



