
<% include ../partials/header %>

<div class="container ">
  <h1 class="text-center"><b>Add new comment to <%= campground.name%></b></h1>
  <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
      <div class="form-group">
          <label for="name">Name</label>
            <input type="text" name="comment[text]" placeholder="text" class="form-control form-control-sm">
      </div>
      <div class="form-group">
          <label for="email">Email address</label>
          <input type="text" name="comment[author]" placeholder="author" class="form-control form-control-lg">
      </div>
      <button class="btn btn-primary btn-block" type="submit">Submit</button>
  </form>
  <br><br>
<a class="btn btn-warning" href="/campgrounds/<%= campground._id%>">Go Back</a>
</div>


<% include ../partials/footer %>
