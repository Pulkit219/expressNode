
<% include ../partials/header %>


<div class="container ">
  <h1 class="text-center"><b>Edit <%=campground.name%></b></h1>
  <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
      <div class="form-group">
          <label for="name">Name</label>
            <input type="text" name="campground[name]" placeholder="type a name..." class="form-control form-control-sm" value="<%=campground.name%>">
      </div>
      <div class="form-group">
          <label for="price">Price</label>
            <input type="number" name="campground[price]" placeholder="price" class="form-control form-control-sm" value="<%=campground.price%>" min="0.01" step="0.01">
      </div>
      <div class="form-group">
          <label for="email">Image Url</label>
          <input type="text" name="campground[image]" placeholder="paste an IMAGE URL..." class="form-control form-control-lg" value="<%=campground.image%>">
      </div>
      <div class="form-group">
          <label for="desc">Description</label>
          <input type="text" name="campground[description]" placeholder="Give a description..." class="form-control form-control-lg" value="<%=campground.description%>">
      </div>

      <button class="btn btn-primary btn-block" type="submit">Submit</button>
  </form>
  <br><br>
  <button type="button" name="button" class="btn btn-warning "><a href="/campgrounds/<%=campground._id%>">Go Back</a></button>
</div>



<% include ../partials/footer %>
